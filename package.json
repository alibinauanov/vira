{
  "name": "vira",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm --workspace apps/web run dev",
    "dev:taplink": "npm --workspace apps/taplink run dev",
    "dev:admin": "npm --workspace apps/admin run dev",
    "build": "npm --workspace apps/web run build",
    "start": "npm --workspace apps/web run start",
    "lint": "npm --workspace apps/web run lint",
    "test:reservations": "tsx tooling/reservations-smoke.ts",
    "db:backfill-reservations": "tsx tooling/backfill-reservations.ts"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.8",
    "prisma": "^6.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
